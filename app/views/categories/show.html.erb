<div class = "container" style="margin-top: 20px">

<h1> <%= @category.name %> </h1>
<br>
<br>
<%= form_for @post do |f| %>

  <%= f.label "Treść posta"%>: <br>
  <%= f.text_area :description %>
  <%= f.hidden_field :id, value: params[:id] %>

  <br>
  <br>

  <%= f.submit %>
<% end %>

<%= params[:id] %>

<%= link_to "Dodaj nowy post", new_post_path, class:"btn btn-success"%>

<% @posts.each do |p| %>

<blockquote style="margin-top: 50px">
  <p> <%= p.description %> </p>
  <footer> <%= p.user.first_name %> <%= p.user.last_name %> </footer>
</blockquote>

<% end %>

</div>