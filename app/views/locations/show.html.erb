</div><div class="col-md-6 well">
  <p class = "lead"><%= @location.name %></p>
  <small> <%=@location.description %></small>
</div>
<br>
<div id="map" style="height: 500px" data-map="<%=@location.cords %>"></div> <br>

<script>
  function initMap() {
      var cords = $("#map").attr('data-map').split(', ');
      var center = new google.maps.LatLng(parseFloat(cords[0]), parseFloat(cords[1]));
      var map = new google.maps.Map(document.getElementById('map'), {
          center: center,
          zoom: 17
      });
  }
</script>

<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDL83WfzxmwshCPup5Hq0WGaNECnXpvxM4&callback=initMap">
</script>
